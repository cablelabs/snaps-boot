<network>
    <name>{{ net_name }}</name>
    <bridge name="{{ bridge_name }}" stp="on" delay="0"/>
    <forward mode="{{ forward_mode }}" dev="{{ forward_nic }}"/>
    <ip address="{{ ip_prfx }}.1" netmask="{{ netmask }}">
        <dhcp>
            <range start="{{ ip_prfx }}.101" end="{{ ip_prfx }}.254"/>
        {% if mac_address %}
            <host mac="{{ mac_address | default('') }}" name="{{ vm_name | default('') }}" ip="{{ ip_addr  | default('')}}"/>
        {% endif %}
        </dhcp>
    </ip>
</network>
