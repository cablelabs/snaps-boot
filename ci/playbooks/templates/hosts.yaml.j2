  DHCP:
    subnet:
    - address: {{ priv_addr }}
      bind_host:
      - ip: {{ priv_ip_1 }}
        mac: {{ priv_mac_1 }}
      - ip: {{ priv_ip_2 }}
        mac: {{ priv_mac_2 }}
      - ip: {{ priv_ip_3 }}
        mac: {{ priv_mac_3 }}
      broadcast-address: {{ broadcast_addr }}
      default-lease: 7600
      dn: {{ domain_name }}
      dns: {{ dns_addr }}
      listen_iface: {{ listen_iface }}
      max-lease: {{ max_lease }}
      name: Managment_SUBNET
      netmask: {{ netmask }}
      range: {{ ip_range }}
      router: {{ router_ip }}
      type: management
  PROXY:
    ftp_proxy: ""
    http_proxy: "{{ http_proxy }}"
    https_proxy: "{{ https_proxy }}"
    ngcacher_proxy: "http://{{ build_priv_ip }}:{{ http_proxy_port }}"
  PXE:
