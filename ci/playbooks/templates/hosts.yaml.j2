          dn: ""
          dns: ""
          gateway: "0.0.0.0"
          iface: {{ admin_iface }}
          name: Admin_Interface
          netmask: {{ netmask }}
          type: tenant
        - address: {{ priv_ip_1 }}
          dn: ""
          dns: ""
          gateway: "0.0.0.0"
          iface: {{ priv_iface }}
          name: Private_Interface
          netmask: {{ netmask }}
          type: tenant
        - address: {{ public_ip_1 }}
          dn: "cablelabs.com"
          dns: {{ dns_addr }}
          gateway: {{ public_gateway }}
