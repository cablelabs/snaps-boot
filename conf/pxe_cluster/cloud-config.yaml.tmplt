#cloud-config
# vim: syntax=yaml

users:
  - name: root
    ssh-authorized-keys:
      - {{ pub_key }}
  - name: ubuntu
    ssh-authorized-keys:
      - {{ pub_key }}
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    groups: sudo
    shell: /bin/bash

final_message: "The system is finally up, after $UPTIME seconds"